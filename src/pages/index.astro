---
import 'src:styles/index.css'
import * as consts from 'src:consts'
import { For } from '@astropub/flow'
import BaseHead from 'src:components/BaseHead.astro'
import Header from 'src:components/Header.astro'
import Link from 'src:components/Link.astro'
import Time from 'src:components/Time.astro'
import { posts } from 'src:posts'
---
<!DOCTYPE html>
<html lang={consts.SITE_LANGUAGE}>
	<head>
		<BaseHead title={consts.SITE_TITLE} description={consts.SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main class="index">
			<ul>
				<For of={posts}>{
					(post) => (
						<li>
							<Time>{
								post.data.published
							}</Time>

							<span class="-spacer" />

							<Link href={`/blog/${post.slug}/`}>{
								post.data.title
							}</Link>
						</li>
					)
				}</For>
			</ul>
		</main>
	</body>
</html>